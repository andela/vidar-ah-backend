{
  "swagger": "2.0",
  "info": {
    "description": "A Social platform for the creative at heart",
    "version": "1.0.0",
    "title": "Authors Haven",
    "termsOfService": "http://swagger.io/terms/",
    "contact": {
      "email": "vidar.ah2019@gmail.com"
